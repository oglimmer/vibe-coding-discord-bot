# Discord Bot Environment Variables
# Copy this to .env and fill in your values

# Discord Bot Configuration
BOT_TOKEN=your_discord_bot_token_here

# Timezone Configuration
TZ=Europe/Berlin

# Database Configuration
# PostgreSQL (recommended)
DB_HOST=localhost
DB_PORT=5432
DB_USER=admin
DB_PASSWORD=your_password_here
DB_NAME=discord_bot

# Alternative: MySQL Configuration
# DATABASE_HOST=localhost
# DATABASE_PORT=3306
# DATABASE_USER=root
# DATABASE_PASSWORD=your_password_here
# DATABASE_NAME=discord_bot_db

# 1337 Game Configuration
# Cron expression: "second minute hour day month dayofweek"
# Examples:
# Daily at 13:37: "37 13 * * *"
# Twice daily (13:37 and 21:37): "37 13,21 * * *"
# Weekdays only at 13:37: "37 13 * * 1-5"
# Every hour at :37 minutes: "37 * * * *"
# Every 30 minutes: "*/30 * * * *"
GAME_1337_CRON=37 13 * * *

# Early bird period (hours before game start)
GAME_1337_EARLY_BIRD_CUTOFF_HOURS=2

# Game timezone (can be different from bot timezone)
# Examples: Europe/Berlin, America/New_York, Asia/Tokyo
GAME_1337_TIMEZONE=Europe/Berlin

# Optional: Discord Role IDs for 1337 Game rewards
# Get by enabling Developer Mode and right-clicking roles
GAME_1337_WINNER_ROLE_ID=
GAME_1337_EARLY_BIRD_ROLE_ID=

# Three-tier role system for 1337 game ranking (based on total wins)
GAME_1337_LEET_SERGEANT_ROLE_ID=    # 1+ wins
GAME_1337_LEET_COMMANDER_ROLE_ID=   # 5+ wins  
GAME_1337_LEET_GENERAL_ROLE_ID=     # 10+ wins